<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:orientation="vertical"
    tools:context="com.example.android.fivetypesofcoffee.MainActivity">
    <!-- #D7CCC8" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/coffee_type" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/latte"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="nextPage"
            android:src="@drawable/latte" />

        <ImageView
            android:id="@+id/americano"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/latte"
            android:onClick="nextPage"
            android:src="@drawable/americano" />

        <ImageView
            android:id="@+id/flatWhite"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/latte"
            android:onClick="nextPage"
            android:src="@drawable/flatwhite" />

        <ImageView
            android:id="@+id/cappuccino"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="115dp"
            android:layout_toRightOf="@id/latte"
            android:onClick="nextPage"
            android:src="@drawable/cappucino" />

        <ImageView
            android:id="@+id/mocha"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="90dp"
            android:layout_toLeftOf="@id/latte"
            android:onClick="nextPage"
            android:src="@drawable/mocha" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Welcome to Coffee World"
        android:textColor="#3E2723"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Choose the coffee you want to know and click it."
        android:textColor="#3E2723"
        android:textSize="12sp" />
</LinearLayout>
